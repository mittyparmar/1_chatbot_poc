# Server Configuration
NODE_ENV=development
PORT=8080

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/chatbot

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
CHAT_SERVICE_URL=http://localhost:3002
ADMIN_SERVICE_URL=http://localhost:3003
PERSONALIZATION_SERVICE_URL=http://localhost:3005
DATA_SERVICE_URL=http://localhost:3006
AI_SERVICE_URL=http://localhost:3007

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_INTERVAL=30000

# Request Timeout
REQUEST_TIMEOUT=30000

# Security
BCRYPT_ROUNDS=12
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# WebSocket Configuration
WEBSOCKET_TIMEOUT=300000
WEBSOCKET_PING_INTERVAL=25000

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Email Configuration (for notifications)
EMAIL_SERVICE_ENABLED=false
EMAIL_FROM=noreply@chatbot.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# AI/ML Configuration
AI_MODEL_TIMEOUT=30000
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Data Export
EXPORT_MAX_SIZE=104857600
EXPORT_TIMEOUT=300000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30