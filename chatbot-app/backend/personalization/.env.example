# Personalization Service Configuration

# Server Configuration
PORT=3005
HOST=0.0.0.0

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=chatbot
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Secret (for authentication if needed)
JWT_SECRET=your-jwt-secret-key-here

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_REGISTRY_URL=http://localhost:8500

# Monitoring and Logging
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# AI/ML Model Configuration
MODEL_ENDPOINT=http://localhost:8000
MODEL_API_KEY=your-model-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# Feature Flags
ENABLE_ADVANCED_PERSONALIZATION=true
ENABLE_BEHAVIOR_ANALYTICS=true
ENABLE_RECOMMENDATION_ENGINE=true
ENABLE_A_B_TESTING=false