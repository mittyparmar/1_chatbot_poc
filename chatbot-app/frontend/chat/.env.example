# Environment Configuration
NODE_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000

# Socket.IO Configuration
REACT_APP_SOCKET_URL=http://localhost:3002

# Authentication
REACT_APP_AUTH_URL=http://localhost:3001

# Feature Flags
REACT_APP_ENABLE_TYPING_INDICATORS=true
REACT_APP_ENABLE_FILE_ATTACHMENTS=true
REACT_APP_ENABLE_MESSAGE_REACTIONS=true
REACT_APP_ENABLE_MESSAGE_EDITING=true
REACT_APP_ENABLE_MESSAGE_DELETION=true

# Analytics
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=

# Development
REACT_APP_DEV_TOOLS=true
REACT_APP_HOT_RELOAD=true